{
  "apps": [
    {
      "name": "ImportGames",
      "script": "./bin/worker",
      "args": [
        "--settings", "settings/prod.json",
        "--delay=2000",
        "lib/strategy/stats/UpdateNFL.coffee"
      ],
      "exec_interpreter": "coffee",
      "exec_mode": "fork",
      "instances": 1,
      "max_memory_restart": "1024M"
    },
  ],

  "deploy": {
    "prod": {
      "user": "root",
      "host": "do.pickk-prod",
      "ref": "origin/master",
      "repo": "https://pickk@bitbucket.org/pickk/pickk-football.git",
      "path": "/opt/pickk-football",
      "post-deploy": "npm install && pm2 startOrRestart ecosystem_prod.json --env prod"
    }
  }
}
