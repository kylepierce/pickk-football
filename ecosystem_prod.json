{
  "apps": [
    {
      "name": "ImportGames",
      "script": "./bin/worker",
      "args": [
        "--settings", "settings/prod.json",
        "--delay=2000",
        "lib/strategy/stats/UpdateGamesStrategy.coffee"
      ],
      "exec_interpreter": "coffee",
      "exec_mode": "fork",
      "instances": 1,
      "max_memory_restart": "1024M"
    },
    {
      "name": "ImportFutureGames",
      "script": "./bin/worker",
      "args": [
        "--settings", "settings/prod.json",
        "--delay=3600000",
        "lib/strategy/stats/ImportFutureGamesStrategy.coffee"
      ],
      "exec_interpreter": "coffee",
      "exec_mode": "fork",
      "instances": 1,
      "max_memory_restart": "1024M"
    }
  ],

  "deploy": {
    "prod": {
      "user": "root",
      "host": "do.pickk-prod",
      "ref": "origin/master",
      "repo": "https://pickk:yreMU8aT8P4cvP3@bitbucket.org/pickk/pickk-import.git",
      "path": "/opt/pickk-import",
      "post-deploy": "npm install && pm2 startOrRestart ecosystem_prod.json --env prod"
    }
  }
}
